{
  "name": "bmad-shrey",
  "private": true,
  "version": "0.1.0",
  "description": "BMAD full-stack platform (architecture scaffold)",
  "main": "template-setup/setup.py",
  "scripts": {
    "setup": "python3 template-setup/setup.py",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File template-setup/setup-windows.ps1",
    "setup:macos": "./template-setup/setup-macos.sh",
    "setup:linux": "./template-setup/setup-linux.sh",
    "predev": "bash scripts/start-redis.sh",
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "build:types": "tsc -p tsconfig.base.json --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:py": "python3 -m pytest tests/",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx && pylint src/ && black --check src/",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix && black src/",
    "format": "prettier --write .",
    "clean": "rm -rf node_modules/ dist/ build/ .turbo __pycache__/ .pytest_cache/",
    "prepare": "husky install"
  },
  "workspaces": [],
  "keywords": [
    "full-stack",
    "nextjs",
    "typescript",
    "trpc",
    "mongodb",
    "ai",
    "architecture"
  ],
  "author": "BMAD Team",
  "license": "MIT",
  "dependencies": {
    "@azure/storage-blob": "^12.29.1",
    "@google-cloud/vertexai": "^1.10.0",
    "@headlessui/react": "^2.2.9",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@sentry/nextjs": "^8.23.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.18.3",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "googleapis": "^126.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.552.0",
    "mammoth": "^1.11.0",
    "mongodb": "^6.3.0",
    "next": "^15.0.0",
    "next-auth": "^4.24.0",
    "openai": "^4.42.0",
    "pdf-parse-fork": "^1.2.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.2.0",
    "postcss": "^8.4.47",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^2.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.14",
    "three": "^0.181.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "jsdom": "^27.0.1",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/bmad-shrey.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/bmad-shrey/issues"
  },
  "homepage": "https://github.com/your-org/bmad-shrey#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
