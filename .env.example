NODE_ENV=development
MONGODB_URI=
OPENAI_API_KEY= # Required only if ENABLE_AI_INTERVIEW=true
RESEND_API_KEY= # Needed for sending transactional emails (password reset, etc.)
SENTRY_DSN=
NEXTAUTH_SECRET=
# Generate with: openssl rand -base64 32  (required in production)
NEXTAUTH_URL=http://localhost:3000
VECTOR_DIMENSIONS=1536
MAX_INTERVIEW_DURATION_MINUTES=25
ENABLE_AI_INTERVIEW=false # Set to true to require OPENAI_API_KEY

# Workable ATS Integration
WORKABLE_API_KEY= # Your Workable SPI v3 API key
WORKABLE_SUBDOMAIN= # e.g. mycompany (from https://mycompany.workable.com)

# Public URL for metadata / sitemap canonical references
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email From Address (optional override)
RESEND_FROM=no-reply@teamified.local

# OAuth Provider Configuration (optional: omit to disable provider)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# Elevate first OAuth user to ADMIN if no admin exists (true/false)
AUTO_ELEVATE_FIRST_OAUTH_ADMIN=false # Set true only for initial bootstrap

USE_AZURE_STORAGE=true
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=